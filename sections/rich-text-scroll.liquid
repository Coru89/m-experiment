{%- if section.settings.background_type == 'boxed' -%}
  {%- assign is_boxed = true -%}
{%- else -%}
  {%- assign is_boxed = false -%}
{%- endif -%}

{%- if section.settings.background != settings.background and section.settings.background != 'rgba(0,0,0,0)' -%}
  {%- assign blends_with_background = false -%}
{%- else -%}
  {%- assign blends_with_background = true -%}
{%- endif -%}

<style>
  .swipe-icon {
    bottom: 40px;
    {% comment %} left: -12px; {% endcomment %}
    position: relative;
    {% comment %} width: 100%; {% endcomment %}
  }

  #shopify-section-{{ section.id }} {
    {%- if section.settings.background == 'rgba(0,0,0,0)' -%}
      {%- assign section_background = settings.background -%}
    {%- else -%}
      {%- assign section_background = section.settings.background -%}
    {%- endif -%}

    {%- if section.settings.text_color == 'rgba(0,0,0,0)' -%}
      {%- assign heading_color = settings.heading_color -%}
      {%- assign text_color = settings.text_color -%}
    {%- else -%}
      {%- assign heading_color = section.settings.text_color -%}
      {%- assign text_color = section.settings.text_color -%}
    {%- endif -%}

    {%- if section.settings.button_background == 'rgba(0,0,0,0)' -%}
      {%- assign button_background = settings.primary_button_background -%}
    {%- else -%}
      {%- assign button_background = section.settings.button_background -%}
    {%- endif -%}

    {%- if section.settings.button_text_color == 'rgba(0,0,0,0)' -%}
      {%- assign button_text_color = settings.primary_button_text_color -%}
    {%- else -%}
      {%- assign button_text_color = section.settings.button_text_color -%}
    {%- endif -%}

    --heading-color: {{ heading_color.red }}, {{ heading_color.green }}, {{ heading_color.blue }};
    --text-color: {{ text_color.red }}, {{ text_color.green }}, {{ text_color.blue }};
    --primary-button-background: {{ button_background.red }}, {{ button_background.green }}, {{ button_background.blue }};
    --primary-button-text-color: {{ button_text_color.red }}, {{ button_text_color.green }}, {{ button_text_color.blue }};

    --section-background: {{ section_background.red }}, {{ section_background.green }}, {{ section_background.blue }};
  }

  #shopify-section-{{ section.id }} .section {
    {%- if section.settings.remove_bottom_spacing -%}
      padding-bottom: 0;
    {%- endif -%}

    {%- if section.settings.remove_top_spacing -%}
      padding-top: 0;
    {%- endif -%}
  }

  #shopify-section-{{ section.id }} .heading {
    font-size: clamp({{ section.settings.heading_font_size_mobile }}px, 4vw + 1rem, {{ section.settings.heading_font_size_desktop }}px);
    margin: 0;
    margin-left: -1.2%;
    margin-bottom: .5rem;
  }

  @media screen and (min-width: 740px) {
    #shopify-section-{{ section.id }} .heading {
      font-size: clamp({{ section.settings.heading_font_size_mobile }}px, 5vw + 1rem, {{ section.settings.heading_font_size_desktop }}px);
    }
  }

  @media screen and (min-width: 1000px) {
    #shopify-section-{{ section.id }} .heading {
      font-size: clamp({{ section.settings.heading_font_size_mobile }}px, 7vw + 1rem, {{ section.settings.heading_font_size_desktop }}px);
    }
  }

  @media screen and (min-width: 1440px) {
    #shopify-section-{{ section.id }} .heading {
      font-size: clamp({{ section.settings.heading_font_size_mobile }}px, 10vw + 1rem, {{ section.settings.heading_font_size_desktop }}px);
    }
  }

  #shopify-section-{{ section.id }} .subheading {
    font-size: {{ section.settings.subheading_font_size_mobile }}px;
  }

  @media screen and (min-width: 1000px) {
    #shopify-section-{{ section.id }} .subheading {
      font-size: {{ section.settings.subheading_font_size_desktop }}px;
    }
  }

  #shopify-section-{{ section.id }} scrollable-content {
    margin-left: -24px;
    margin-right: -24px;
    position: relative;
  }

  #shopify-section-{{ section.id }} scrollable-content .image__wrapper {
    overflow: scroll;
    margin: 0 -24px;
  }

  #shopify-section-{{ section.id }} scrollable-content img {
    width: 240%;
    overflow: scroll;
    max-width: none;
  }
</style>

<section class="section {% unless blends_with_background or is_boxed %}section--flush{% endunless %}">
  <div
    {% if is_boxed %}
      class="container"
    {% endif %}
  >
    <div class="section__color-wrapper {% if is_boxed %}section__color-wrapper--boxed{% endif %}">
      <div class="{% unless is_boxed %}container{% endunless %} {% unless blends_with_background %}vertical-breather{% endunless %}">
        {%- assign text_position = section.settings.text_position -%}
        {%- assign text_alignment = section.settings.text_alignment -%}

        <div class="content-box content-box--{{ section.settings.text_width }} content-box--text-{{ text_alignment }} content-box--{{ text_position }} text-container">
          {%- if section.settings.title != blank -%}
            <h2 class="heading h2">{{ section.settings.title | escape | newline_to_br }}</h2>
          {%- endif -%}

          {%- if section.settings.subheading != blank -%}
            <h3 class="subheading">{{ section.settings.subheading | escape }}</h3>
          {%- endif -%}

          {%- if section.settings.button_text != blank -%}
            <div class="button-wrapper">
              <a href="{{ section.settings.button_link }}" class="button button--primary">
                {{- section.settings.button_text | escape -}}
              </a>
            </div>
          {%- endif -%}

          {%- if section.settings.image != blank -%}
            {%- assign image = section.settings.image -%}
            <div class="image__wrapper {% if section.settings.mobile_image != blank %}hidden-phone{% endif %}">
              {{ image | image_url: width: image.width | image_tag: class: 'add_your_class_here', loading: 'lazy' }}
            </div>
          {%- endif -%}
          {%- if section.settings.mobile_image != blank -%}
            {% comment %} <gallery-list class="gallery"> {% endcomment %}
              <scrollable-content class="gallery__list-wrapper {% if section.blocks.size >= 3 %}is-scrollable{% endif %} hidden-tablet-and-up hide-scrollbar"
              >
                {% comment %} <gallery-item> {% endcomment %}
                  <div
                    class="image__wrapper hide-scrollbar"
                    {% if section.settings.transition_type == 'reveal' %}
                      reveal-visibility
                    {% endif %}
                  >
                    {{-
                      section.settings.mobile_image
                      | image_url: width: 3000
                      | image_tag:
                        draggable: true,
                        sizes: '240vw',
                        widths: '600,700,800,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000'
                    -}}
                  </div>
                {% comment %} </gallery-item> {% endcomment %}
                
              </scrollable-content>
              <svg class="swipe-icon hidden-tablet-and-up" width="322" height="9" viewBox="0 0 322 9" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M0.901329 4.29293C0.706067 4.48819 0.706067 4.80478 0.901329 5.00004L4.08331 8.18202C4.27857 8.37728 4.59515 8.37728 4.79042 8.18202C4.98568 7.98676 4.98568 7.67017 4.79042 7.47491L1.96199 4.64648L4.79042 1.81806C4.98568 1.6228 4.98568 1.30621 4.79042 1.11095C4.59515 0.915688 4.27857 0.915688 4.08331 1.11095L0.901329 4.29293ZM321.608 5.00004C321.804 4.80478 321.804 4.48819 321.608 4.29293L318.426 1.11095C318.231 0.915688 317.915 0.915688 317.719 1.11095C317.524 1.30621 317.524 1.6228 317.719 1.81806L320.548 4.64648L317.719 7.47491C317.524 7.67017 317.524 7.98676 317.719 8.18202C317.915 8.37728 318.231 8.37728 318.426 8.18202L321.608 5.00004ZM1.25488 5.14648H321.255V4.14648H1.25488V5.14648Z" fill="#6b6b6b"/>
              </svg>
              {% comment %} <div class="gallery__progress-bar-wrapper container swipe-icon">
                <span class="gallery__progress-bar progress-bar" style="--divider: 2.0"></span>
              </div>
            </gallery-list> {% endcomment %}
          {%- endif -%}

          {%- if section.settings.content != blank -%}
            {{- section.settings.content -}}
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Rich text with scroller",
  "class": "shopify-section--rich-text",
  "settings": [
    {
      "type": "textarea",
      "id": "title",
      "label": "Heading",
      "default": "Talk about your brand"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Subheading"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile image",
      "info": "1000 x 1400px .jpg recommended. If none is set, desktop image will be used."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "select",
      "id": "background_type",
      "label": "Background",
      "options": [
        {
          "value": "full_width",
          "label": "Full width"
        },
        {
          "value": "boxed",
          "label": "Boxed"
        }
      ],
      "default": "full_width"
    },
    {
      "type": "select",
      "id": "text_width",
      "label": "Text width",
      "options": [
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        },
        {
          "value": "fill",
          "label": "Fill screen"
        }
      ],
      "default": "medium"
    },
    {
      "type": "header",
      "content": "Font Sizes"
    },
    {
      "type": "range",
      "id": "heading_font_size_desktop",
      "label": "Heading Font Size Max Desktop",
      "min": 40,
      "max": 220,
      "step": 2,
      "default": 118,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "heading_font_size_mobile",
      "label": "Heading Font Size Min Mobile",
      "min": 18,
      "max": 80,
      "step": 2,
      "default": 50,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "subheading_font_size_desktop",
      "label": "Subheading Font Size Desktop",
      "min": 14,
      "max": 60,
      "step": 1,
      "default": 22,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "subheading_font_size_mobile",
      "label": "Subheading Font Size Mobile",
      "min": 12,
      "max": 32,
      "step": 1,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "text_position",
      "label": "Text position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "checkbox",
      "label": "Remove Top Spacing",
      "id": "remove_top_spacing",
      "default": false
    },
    {
      "type": "checkbox",
      "label": "Remove Bottom Spacing",
      "id": "remove_bottom_spacing",
      "default": false
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "rgba(0,0,0,0)"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "rgba(0,0,0,0)"
    },
    {
      "type": "color",
      "id": "button_background",
      "label": "Button background",
      "default": "rgba(0,0,0,0)"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text",
      "default": "rgba(0,0,0,0)"
    }
  ],
  "presets": [
    {
      "name": "Rich text with scroller",
      "settings": {}
    }
  ]
}
{% endschema %}
